<form action="/users/filter_table" method="get" data-remote=true>
  <%= select_tag 'roles', options_for_select(@active_roles), class: "selectpicker", 'multiple': true %>
  <button id="submit_filter">Submit</button>
</form>
<div class="row">
    <div class="col-md-12 col-xs-12">
    <div class="d-flex justify-content-around">
        <h1 class="title p-3">
        Users
        </h1>
        
    </div>
    <div class="body-section">
      <% if @users.present? && @users.length > 0%>
        <table class="table table-bordered">
          <thead class="thead-dark">
          <tr>
              <th> Image </th>
              <th> First Name </th>
              <th> Last Name </th>
              <th> Email </th>
              <th> Roles </th>
              <th> Meta cols </th>
          </tr>
          </thead>
          <tbody>
            <%= render partial: "users_table_body" %>
          </tbody>
        </table>
      <% end %>
    </div>
    </div>
</div>
    
<script>

  $(document).ready(function(){
      $('.selectpicker').multiselect();
      $(".multiselect").click(function(){
        $(".multiselect-container").toggle();
      })
      $(".submit_filter").click(function(){
        $(".multiselect-container").toggle();
      })
  });

</script>